{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "origin/main",
    "pipeline": {
        "deploy": {
            "dependsOn": ["build"]
        },
        "build": {
            "dependsOn": ["^build", "test:ci"]
        },
        "test": {
            "dependsOn": ["lint"],
            "outputs": []
        },
        "test:ci": {
            "dependsOn": ["lint"],
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        }
    }
}
